# Lab Analyzer Configuration
# Copy this file to .env and adjust as needed

# Lab Analyzer Settings (receives orders)
LISTEN_HOST=0.0.0.0
LISTEN_PORT=2575

# MLLP Server Configuration (where results are sent)
MLLP_SERVER_ADDRESS=localhost:2577

# Flask Web App Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=8050
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Basic Authentication
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=password

# For Docker deployments, you may need:
# MLLP_SERVER_ADDRESS=host.docker.internal:2577

